	<li><%= link_to 'Dashboard', user_path(session['user_id']) %></li>
	<li><%= link_to 'Precalculus', dash_precalcs_path(session['user_id']) %></li>
	<li><%= link_to 'Practice', practice_precalcs_path(session['user_id']) %></li>
