<%= render 'nav' %>

<!--find a random entry in the array of available ids-->
<% ids = Array.new %>
<% @precalcs.each do |p| %>
	<% ids.push(p.id) %>
<% end %>
<% id = ids.sample %>

<div class="precalc-practice-question">
	<% p = @precalcs.find(id) %>
	<%# @precalcs.each do |p| %>
	<%= p.question %>
	<br><br>
	<button type="button" class="btn btn-default" id="precalc-solution-button">Solution</button>

	<%# if @precalcs.find(id).hint != nil %>
		<% if p.hint != nil %>
			<button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#hintModal">
				Hint
			</button>
			<!-- Modal -->
			<div class="modal fade" id="hintModal" tabindex="-1" role="dialog" aria-labelledby="hintModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title" id="hintModalLabel">Hint</h4>
						</div>
						<div class="modal-body">
							<%= p.hint %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
</div>

<div id="practice-solutions-box" class="practice-solution">
	<div class="practice-solution-step" style="display:none;">
		<ol>
			<% @precalcs.find(id).solution.each do |step| %>
				<% index = @precalcs.find(id).solution.index(step) %>
				<li id="Step<%= index+1 %>"><%= step %></li>
			<% end %>
		</ol>
		<br><br>
		<button type="button" class="btn btn-default btn-sm" id="step" onclick="ShowStep()" disabled="true">
			show next step
		</button>
		<button type="button" class="btn btn-default btn-sm" id="reset" onclick="ResetSteps()" disabled="true">
			reset steps
		</button>
	</div>
</div>

<div style="margin: 0 auto;width:50%;">
	<div class="row row-centered">
		<div class="col-md-4 col-centered">
			<button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">
				Unit circle
			</button>
			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h3 class="modal-title" id="myModalLabel">Unit circle</h3>
						</div>
						<div class="modal-body">
							<%= image_tag('unit-circle.png') %>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4 col-centered">
			<button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#trigModal">
				Trigonometric Identities
			</button>
			<!-- Modal -->
			<div class="modal fade" id="trigModal" tabindex="-1" role="dialog" aria-labelledby="trigModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h3 class="modal-title" id="trigModalLabel">Trigonometric Identities</h3>
						</div>
						<div class="modal-body">
							<h3>Basic Identities</h3>
							<p class="modal-math">$\begin{array}{rl} \csc{x} = \dfrac{1}{\sin{x}} & \sin{x} = \dfrac{1}{\csc{x}} \newline \sec{x} = \dfrac{1}{\cos{x}} & \cos{x} = \dfrac{1}{\sec{x}} \newline \cot{x} = \dfrac{1}{\tan{x}} = \dfrac{\cos{x}}{\sin{x}} & \tan{x} = \dfrac{1}{\cot{x}} = \dfrac{\sin{x}}{\cos{x}} \end{array}$</p>

							<h3>Pythagorean Identities</h3>
							<p class="modal-math"> $\begin{array}{rcl} \sin^2{t} + \cos^2{t} = 1 & \tan^2{t} + 1 = \sec^2{t} & 1 + \cot^2{t} =
								\csc^2{t} \\ \sin{(-t)} = -\sin{t} & \cos{(-t)} = \cos{t} & \tan{(-t)} = -\tan{t}
								\end{array}$ </p>

							<h3>Cofunction Identities</h3>
							<p class="modal-math" style="background-color: white;">$$\begin{array}{ccc} \sin{\theta} = \cos{
								(\frac{\pi}{2}-\theta)} & \tan{\theta} = \cot{(\frac{\pi}{2}-\theta)} & \sec{\theta} = \csc{(\frac{\pi}{2}-\theta)} \newline \cos{\theta} = \sin{(\frac{\pi}{2}-\theta)} & \cot{\theta} = \tan{(\frac{\pi}{2}-\theta)} & \csc{\theta} = \sec{(\frac{\pi}{2}-\theta)} \end{array}$$</p>

							<h3>Angle Sum and Difference Identities</h3>
							<p class="modal-math">$$\begin{array}{rl} \sin{(\alpha + \beta)} = \sin{\alpha}\cos{\beta} + \cos{\alpha}\sin{\beta} & \cos{(\alpha + \beta)} = \cos{\alpha}\cos{\beta} - \sin{\alpha}\sin{\beta} \\ \sin{(\alpha - \beta)} = \sin{\alpha}\cos{\beta} - \cos{\alpha}\sin{\beta} & \cos{(\alpha - \beta)} = \cos{\alpha}\cos{\beta} + \sin{\alpha}\sin{\beta} \end{array}$$</p>
							<p class="modal-math">$$\begin{array}{rl} \tan{(\alpha+\beta)} = \dfrac{\tan{\alpha}+\tan{\beta}}{1-\tan{\alpha}\tan{\beta}} & \tan{(\alpha-\beta)} = \dfrac{\tan{\alpha}-\tan{\beta}}{1+\tan{\alpha}\tan{\beta}} \end{array}$$</p>

							<h3>Double Angle Identities</h3>
							<p class="modal-math">$\sin{(2x)} = 2\sin{x}\cos{x}$</p>
							<p class="modal-math">$\cos{(2x)} = \cos^2{x} - \sin^2{x} = 1 - 2\sin^2{x} = 2\cos^2{x} - 1$</p>
							<p class="modal-math">$\tan{(2x)} = \dfrac{2\tan{x}}{1-\tan^2{x}}$</p>

							<h3>Half Angle Identities</h3>
							<p class="modal-math">$$\begin{array}{rl} \sin{\left(\frac{x}{2}\right)} = \pm \sqrt{\dfrac{1-\cos{x}}{2}} & \cos{\left(\frac{x}{2}\right)} = \pm \sqrt{\dfrac{1+\cos{x}}{2}} \end{array}$$</p>
							<p class="modal-math">$\tan{\left(\frac{x}{2}\right)} = \pm \sqrt{\dfrac{1-\cos{x}}{1+\cos{x}}} = \dfrac{1-\cos{x}}{\sin{x}} = \dfrac{\sin{x}}{1+\cos{x}}$</p>

							<h3>Sum and Product Identities</h3>
							<p class="modal-math">$$\begin{array}{rl} \sin{x}+\sin{y} = 2\sin{\left(\frac{x+y}{2}\right)}\cos{\left(\frac{x-y}{2}\right)} & \cos{x}+\cos{y} = 2\cos{\left(\frac{x+y}{2}\right)}\cos{\left(\frac{x-y}{2}\right)} \\ \sin{x}-\sin{y} = 2\cos{\left(\frac{x+y}{2}\right)}\sin{\left(\frac{x-y}{2}\right)} & \cos{x}-\cos{y} = -2\sin{\left(\frac{x+y}{2}\right)}\sin{\left(\frac{x-y}{2}\right)} \end{array}$$</p>
							<p class="modal-math">$$\begin{array}{rl} \sin{x}\cos{y} = \dfrac{\sin{(x+y)}+\sin{(x-y)}}{2} & \cos{x}\sin{y} = \dfrac{\sin{(x+y)}-\sin{(x-y)}}{2} \\ \cos{x}\cos{y} = \dfrac{\cos{(x-y)}+\cos{(x+y)}}{2} & \sin{x}\sin{y} = \dfrac{\cos{(x-y)}-\cos{(x+y)}}{2} \end{array}$$</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4 col-centered">
			<div class="next-question">
				<button type="button" class="btn btn-success btn-lg">
					<%= link_to 'Next question', trig_precalcs_path(session['user_id']), :style => 'font-decoration:none; color:#f0f0f0' %>
				</button>
			</div>
		</div>
	</div>
</div>

